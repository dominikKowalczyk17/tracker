{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": [
      "es2022"
    ],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": [
      "development"
    ],
    "baseUrl": ".",
    "paths": {
      "@tracker/shared/data-access": [
        "libs/shared/data-access/src/index.ts"
      ],
      "@tracker/shared/data-access/*": [
        "libs/shared/data-access/src/*"
      ],
      "@tracker/shared/ui": [
        "libs/shared/ui/src/index.ts"
      ],
      "@tracker/shared/ui/*": [
        "libs/shared/ui/src/*"
      ],
      "@tracker/shared/ui/base": [
        "libs/shared/ui/src/lib/base/index.ts"
      ],
      "@tracker/shared/ui/lib": [
        "libs/shared/ui/src/lib/index.ts"
      ],
      "@tracker/shared/ui/lib/*": [
        "libs/shared/ui/src/lib/*"
      ],
      "sportsApp": [
        "apps/client/sports-app/src/index.ts"
      ],
      "investmentsApp": [
        "apps/client/investments-app/src/index.ts"
      ],
    }
  }
}
